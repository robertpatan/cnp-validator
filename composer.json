{
    "name": "robertpatan/php-cnp-validator",
    "description": "Validates Romanian personal identification number",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Robert Patan",
            "email": "robert@bytepath.ro"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    },
    "scripts": {
        "fix-php": [
            "php-cs-fixer fix \"$(pwd | awk '{print $1\"/src/\"}')\" --rules=@PSR2 --verbose"
        ],
        "lint": [
            "phpcs --standard=PSR2 \"$(pwd | awk '{print $1\"/src/\"}')\" "
        ]

    }
}
